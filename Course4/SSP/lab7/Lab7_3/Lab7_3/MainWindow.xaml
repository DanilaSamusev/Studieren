<Window x:Class="Lab7_3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab7_3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Ellipse Height="100" Stroke="Black" Width="100" x:Name="ellipse" >
            <Ellipse.Fill >
            <RadialGradientBrush >
                <GradientStop x:Name="GradientStop1"  Color="yellow" Offset="1" />
                    <GradientStop x:Name="GradientStop2"  Color="Red" Offset="0" />
                    <GradientStop x:Name="GradientStop3"  Color="yellow" Offset="0" />
                </RadialGradientBrush>
            </Ellipse.Fill>
        </Ellipse>
        <Button Content="Button" Margin="300,304,300,91" Click="Button_Click"/>


    </Grid>
</Window>
